<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutUsActivity">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/murat" android:id="@+id/image_murat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginTop="36dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="Said Murat\nÖZDEMİR"
            android:layout_width="320dp"
            android:layout_height="85dp"
            android:id="@+id/text_murat_name"
            android:gravity="center"
            android:textAllCaps="true"
            android:fontFamily="@font/poppins_black_italic"
            android:textColor="@color/colorPrimary"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="@+id/image_murat"
            app:layout_constraintEnd_toEndOf="@+id/image_murat"
            app:layout_constraintTop_toBottomOf="@+id/image_murat" android:layout_marginTop="12dp"/>

    <ImageButton
            android:layout_width="180dp"
            android:layout_height="74dp"
            app:srcCompat="@drawable/github"
            android:id="@+id/github_murat"
            android:scaleType="centerInside"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@+id/text_murat_name"
            app:layout_constraintStart_toStartOf="@+id/text_murat_name"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="@+id/text_murat_name"
    />
    <ImageButton
            android:layout_width="180dp"
            android:layout_height="74dp"
            android:scaleType="centerInside"
            android:background="@null"
            app:srcCompat="@drawable/linkedin" android:id="@+id/linkedin_murat"
            app:layout_constraintTop_toBottomOf="@+id/github_murat"
            android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="@+id/github_murat"
            app:layout_constraintEnd_toEndOf="@+id/github_murat"/>
    <TextView
            android:text="Github Repository of the Project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_repo"
            app:layout_constraintBottom_toTopOf="@+id/github_repo"
            android:fontFamily="@font/poppins_black_italic"
            android:textColor="@color/colorPrimary" android:textSize="16sp"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="@+id/github_repo"
            app:layout_constraintEnd_toEndOf="@+id/github_repo"/>

    <ImageButton
            android:layout_width="150dp"
            android:layout_height="61dp"
            app:srcCompat="@drawable/github"
            android:id="@+id/github_repo"
            android:scaleType="centerInside"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="36dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>