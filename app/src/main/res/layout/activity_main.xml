<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView2"/>

    <Button
            android:id="@+id/button_check_notification_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Notification Permission"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.068" app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="Copy"
            android:layout_width="103dp"
            android:layout_height="55dp"
            android:id="@+id/copy_button"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/button_check_notification_permission"
            app:layout_constraintStart_toStartOf="@+id/button_check_notification_permission"
            app:layout_constraintEnd_toStartOf="@+id/share_button"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:text="Share"
            android:layout_width="103dp"
            android:layout_height="55dp" android:id="@+id/share_button"
            app:layout_constraintEnd_toEndOf="@+id/button_check_notification_permission"
            app:layout_constraintTop_toTopOf="@+id/copy_button"
            app:layout_constraintBottom_toBottomOf="@+id/copy_button"/>
    <TextView
            android:text="saidmuratozdemir44@gmail.com"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_mail_from_json"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>